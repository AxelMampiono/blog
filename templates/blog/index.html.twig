{% extends 'base.html.twig' %}

{% block title %}Listes des acticles!{% endblock %}

{% block body %}
 <h1 class="display-4 text-center my-5">{{ title }}</h1>
 <div class="album py-5 bg-light">

      <div class="row">
      {% for data in articles %}
        <div class="col-md-4">
          <div class="card mb-4 shadow-sm">
            <img src="{{ data.image}}" alt"{{data.title}}">

            <div class="card-body">
              <p class="card-text">{{data.content|striptags | slice(0,250)}}...</p>
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                  <a href="{{path('blog_show', {'id':data:id})}}" class="btn btn-sm -outline-secondary">Detail</a>
                  <a href="{{path('blog_edit', {'id':data:id})}}" class="btn btn-sm btn-outline-secondary">Modifier</a>
                </div>
                {# La bdd renvoi un objet issue de la classe DateTime, on ne peut la convertir en une chaine de caractère #}
                                {# On utilise donc un filtre Twig : date() #}

                <small class="text-muted">{{data.createAt|date('d/m/Y')}} à {{data.createAt|date('H:i:s')}} dans la categorie <strong>  {{ data.category.title }} </strong></small>
              </div>
            </div>
          </div>
        </div>
        
        
      </div>
    {% endfor %} 
  </div>
{% endblock %}
